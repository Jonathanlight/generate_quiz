<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>{% block title %} {{ 'session.title'|trans }} {% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Session - RESSOURCES-FORMATION" name="description" />
    <meta content="RESSOURCES-FORMATION" name="author" />
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}">
    <link href="{{ asset('assets/css/icons.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/css/app.min.css') }}" rel="stylesheet" type="text/css" id="light-style" />
    <link href="{{ asset('assets/css/app-dark.min.css') }}" rel="stylesheet" type="text/css" id="dark-style" />
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <style>
            .vich-image img{
                width: 150px;
            }
        </style>
    {% endblock %}
</head>

<body class="loading" data-layout-config='{"leftSideBarTheme":"dark","layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":false, "showRightSidebarOnStart": true}'>
<div class="wrapper">

    {% if app.user.role == constant('App\\Entity\\User::ROLE_TEACHER') %}
        {% include 'components/navbar_teacher.html.twig' %}
    {% endif %}

    {% if app.user.role == constant('App\\Entity\\User::ROLE_ADMINISTRATION') %}
        {% include 'components/navbar_administration.html.twig' %}
    {% endif %}

    {% if app.user.role == constant('App\\Entity\\User::ROLE_STUDENT') or app.user.role == constant('App\\Entity\\User::ROLE_USER') %}
        {% include 'components/navbar_student.html.twig' %}
    {% endif %}

    <div class="content-page">
        {% block body %}{% endblock %}
    </div>
</div>

<div class="rightbar-overlay"></div>

<script src="{{ asset('assets/js/vendor.min.js') }}"></script>
<script src="{{ asset('assets/js/app.min.js') }}"></script>
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
