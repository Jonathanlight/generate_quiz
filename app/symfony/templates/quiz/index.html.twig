{% extends 'base_dashboard.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}

    <div class="row mt-3">
        <div class="col-12">
            <div class="page-title-box">
                <a class="btn btn-primary" href="{{ path('app_quiz_new') }}">Nouveau Quiz</a>
                <a class="btn btn-info" href="{{ path('app_quiz_attribute') }}">Attribuer un Quiz</a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.name }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_quiz_show', {'id': quiz.id}) }}">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a class="btn btn-primary" href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">
                            <i class="fa fa-pen"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Vide</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
