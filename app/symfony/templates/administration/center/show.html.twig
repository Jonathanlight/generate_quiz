{% extends 'base.html.twig' %}

{% block title %}Site Ressources Formation{% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Site Ressources Formation</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Site Ressources Formation</h4>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <tbody>
                                        <tr>
                                            <th>Id</th>
                                            <td>{{ center.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Name</th>
                                            <td>{{ center.name }}</td>
                                        </tr>
                                        <tr>
                                            <th>Adresse</th>
                                            <td>{{ center.address }}</td>
                                        </tr>
                                        <tr>
                                            <th>Ville</th>
                                            <td>{{ center.city }}</td>
                                        </tr>
                                        <tr>
                                            <th>Codepostal</th>
                                            <td>{{ center.codePostal }}</td>
                                        </tr>
                                        <tr>
                                            <th>Phone</th>
                                            <td>{{ center.phone }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
