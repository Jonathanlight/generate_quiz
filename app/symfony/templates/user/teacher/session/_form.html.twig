{{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_row(form.present, {
                    label: 'teacher.session.form.present.name',
                    attr: {
                        'class': 'form-select',
                        'placeholder': 'teacher.session.form.present.placeholder'
                    }
                }) }}
            </div>

            <div class="mb-3">
                {{ form_row(form.reasonMissing, {
                    label: 'teacher.session.form.reasonMissing.name',
                    attr: {
                        'class': 'form-control',
                        'placeholder': 'teacher.session.form.reasonMissing.placeholder'
                    }
                }) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
