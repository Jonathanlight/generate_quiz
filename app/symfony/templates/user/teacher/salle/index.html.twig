{% extends 'base.html.twig' %}

{% block title %}Salles{% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Salles</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Salles</h4>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Formation</th>
                                            <th>Salle</th>
                                            <th>Date</th>
                                            <th>Total Presence</th>
                                            <th>total Effectif</th>
                                            <th>Statut</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for salle in salles %}
                                            <tr>
                                                <td>{{ salle.id }}</td>
                                                <td class="table-danger">{{ salle.formation.name }}</td>
                                                <td>{{ salle.name }}</td>
                                                <td>{{ salle.createdAt ? salle.createdAt|date('d-m-Y') : '' }}</td>
                                                <td class="table-success">{{ salle.totalPresence }}</td>
                                                <td class="table-warning">{{ salle.totalStaff }}</td>
                                                <td>
                                                    {% if salle.status == 0 %}
                                                        <span class="bg bg-success text-light pt-2 pb-2 pl-1 pr-1">Session en attente</span>
                                                    {% endif %}

                                                    {% if salle.status == 1 %}
                                                        <span class="bg bg-warning text-light pt-2 pb-2 pl-1 pr-1">Session en cours</span>
                                                    {% endif %}

                                                    {% if salle.status == 2 %}
                                                        <span class="bg bg-danger text-light pt-2 pb-2 pl-1 pr-1">Session terminée</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <a href="{{ path('teacher_session_show', {'id': salle.id}) }}" class="btn btn-outline-info">Voir la session</a>
                                                    <a href="{{ path('teacher_salle_edit', {'id': salle.id}) }}" class="btn btn-outline-danger">Modifier le statut</a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6" class="text-center text-danger">Actuellement, vous n'avez aucune session planifiée sur ce site. </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
