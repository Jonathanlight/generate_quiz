{% extends 'base.html.twig' %}

{% block title %} Formateur|Professeur {% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Formateur|Professeur</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Formateur|Professeur</h4>

                            <p>
                                <a href="{{ path('teacher_new') }}" class="btn btn-outline-danger">Ajouter un nouveau</a>
                            </p>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <tbody>
                                        <tr>
                                            <th>Id</th>
                                            <td>{{ teacher.id }}</td>
                                        </tr>
                                        <tr>
                                            <th>Nom</th>
                                            <td>{{ teacher.name }}</td>
                                        </tr>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ teacher.email }}</td>
                                        </tr>
                                        <tr>
                                            <th>Telephone</th>
                                            <td>{{ teacher.telephone }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
