{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Formateur</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Formateur</h4>

                            <p>
                                <a href="{{ path('teacher_new') }}" class="btn btn-outline-danger">Ajouter un nouveau</a>
                            </p>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom</th>
                                            <th>Email</th>
                                            <th>Téléphone</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for teacher in teachers%}
                                            <tr>
                                                <td>{{ teacher.id }}</td>
                                                <td>{{ teacher.name }}</td>
                                                <td>{{ teacher.email }}</td>
                                                <td>{{ teacher.phone }}</td>
                                                <td>
                                                    <a href="{{ path('teacher_show', {'id': teacher.id}) }}" class="btn btn-outline-info"><i class="mdi mdi-eye me-1"></i></a>
                                                    <a href="{{ path('teacher_edit', {'id': teacher.id}) }}" class="btn btn-outline-info"><i class="mdi mdi-account-edit me-1"></i></a>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">no records found</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
