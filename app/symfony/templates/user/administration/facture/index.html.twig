{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Facture</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Facture</h4>

                            {{ form_start(form, {'attr': {'class': 'card p5 m5'}}) }}
                                <div class="row">
                                    <div class="col-md-3 col-sm-3">
                                        {{ form_widget(form.formation) }}
                                    </div>
                                    <div class="col-md-3 col-sm-3">
                                        {{ form_widget(form.beginFilterDate) }}
                                    </div>
                                    <div class="col-md-3 col-sm-3">
                                        {{ form_widget(form.endFilterDate) }}
                                    </div>
                                    <div class="col-md-3 col-sm-3">
                                        <button class="btn btn-danger">{{ button_label|default('Rechercher') }} <i class="fa fa-search"></i> </button>
                                    </div>
                                </div>
                            {{ form_end(form) }}

                            <br>

                            <div class="row ">
                                <div class="col-md-6">
                                    <p class="text-muted mb-0 mt-3">Montant Total</p>
                                    <h2 class="fw-normal mb-3">
                                        <small class="mdi mdi-checkbox-blank-circle text-success align-middle me-1"></small>
                                        <span>{{ total }} €</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Facture</h4>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <thead class="text-center">
                                        <tr>
                                            <th>Id</th>
                                            <th>Date</th>
                                            <th>Salle</th>
                                            <th>Présent</th>
                                            <th>Formation</th>
                                            <th>Formateur</th>
                                            <th>Taux</th>
                                            <th>Total</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-center">
                                        {% for facture in factures %}
                                            <tr>
                                                <td>{{ facture.id }}</td>
                                                <td class="table-warning">{{ facture.salle.createdAt|date('d-m-Y') }}</td>
                                                <td>{{ facture.salle }}</td>
                                                <td class="table-danger">{{ facture.salle.totalPresence }}</td>
                                                <td class="table-warning">{{ facture.salle.formation.name }}</td>
                                                <td>{{ facture.salle.formation.teacher }} </td>
                                                <td class="table-danger">{{ facture.salle.formation.taux }}</td>
                                                <td class="table-success ">{{ facture.total }} €</td>
                                                <td>
                                                    <a href="{{ path('facture_show', {'id': facture.id}) }}" class="btn btn-outline-info"><i class="mdi mdi-eye me-1"></i> Voir</a>
                                                    {#  <a href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a> #}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr >
                                                <td colspan="9" class="text-danger"><i class="far fa-frown fa-2x"></i> Aucun Résultat Trouvé Pour Cette Période. Veuillez Sélectionner Une Nouvelle Date.</td>
                                            </tr>
                                            <a href="{{ path('facture_index') }}" class="btn btn-outline-dark mb-2 mt-2">Retour</a>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
