{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
    <div class="content">
        {% include 'components/head_navbar_custom.html.twig' %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Les Formations</h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-3">Les Formations</h4>

                            <a href="{{ path('formation_new') }}" class="btn btn-outline-danger mb-2 mt-2">Ajouter une formation</a>

                            <div class="table-responsive">
                                <table class="table table-striped table-sm table-nowrap table-centered mb-0">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Formateur</th>
                                        <th>Nom</th>
                                        <th>Taux</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for formation in formations %}
                                        <tr>
                                            <td>{{ formation.id }}</td>
                                            <td>{{ formation.teacher}}  </td>
                                            <td>{{ formation.name }}</td>
                                            <td>{{ formation.taux }}</td>
                                            <td>
                                                <a href="{{ path('formation_show', {'id': formation.id}) }}" class="btn btn-outline-info"><i class="mdi mdi-eye me-1"></i></a>
                                                <a href="{{ path('formation_edit', {'id': formation.id}) }}" class="btn btn-outline-danger"><i class="mdi mdi-account-edit me-1"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
